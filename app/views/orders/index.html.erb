<p id="notice"><%= notice %></p>

<h3><%= t'.title' %></h3>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="table-reponsive">
      <table class="table table-striped">
      <thead>
        <tr>
          <th>Nome Cliente</th>
          <th>Email</th>
          <th>Disco</th>
          <th colspan="3">Ação</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.name %></td>
            <td><%= order.email %></td>
            <td><%= order.disk.name %></td>
            <td><%= link_to 'Excluir', order, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <%= will_paginate @orders, class: 'apple_pagination' %>
  </div>
</div>
