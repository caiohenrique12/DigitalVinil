<p id="notice"><%= notice %></p>

<h3><%= t '.title' %></h3>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="table-reponsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Autor</th>
            <th>Price</th>
            <th>Data de gravação</th>
            <th>Disponibilidade</th>
            <th>Estado de conservação</th>
            <th colspan="3">Ação</th>
          </tr>
        </thead>

        <tbody>
          <% @disks.each do |disk| %>
            <tr>
              <td><%= image_tag disk.image.url(:thumb) %></td>
              <td><%= disk.name %></td>
              <td><%= disk.author %></td>
              <td><%= number_to_currency disk.price %></td>
              <td><%= disk.recording_year %></td>
              <td><%= disk.available %></td>
              <td><%= disk.state.name %></td>
              <td><%= link_to t('.show'), disk %></td>
              <td><%= link_to t('.edit'), edit_disk_path(disk) %></td>
              <td><%= link_to t('.destroy'), disk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to t('.new'), new_disk_path, class: 'btn btn-primary' %>
