<p id="notice"><%= notice %></p>

<h1>Listing Disks</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Author</th>
      <th>Price</th>
      <th>Recording year</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disks.each do |disk| %>
      <tr>
        <td><%= image_tag disk.image.url(:thumb) %></td>
        <td><%= disk.name %></td>
        <td><%= disk.author %></td>
        <td><%= disk.price %></td>
        <td><%= disk.recording_year %></td>
        <td><%= disk.status_id %></td>
        <td><%= link_to 'Show', disk %></td>
        <td><%= link_to 'Edit', edit_disk_path(disk) %></td>
        <td><%= link_to 'Destroy', disk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

