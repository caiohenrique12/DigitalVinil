<p id="notice"><%= notice %></p>

<h1>Listing States</h1>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="table-reponsive">
      <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Ação</th>
        </tr>
      </thead>

      <tbody>
        <% @states.each do |state| %>
          <tr>
            <td><%= state.name %></td>
            <td><%= link_to 'Show', state %></td>
            <td><%= link_to 'Edit', edit_state_path(state) %></td>
            <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

<%= link_to 'New State', new_state_path, class: 'btn btn-primary' %>
